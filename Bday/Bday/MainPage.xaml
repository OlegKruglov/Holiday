<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bday.MainPage">

    <AbsoluteLayout>
        <Picker x:Name="Holiday" AbsoluteLayout.LayoutBounds="120,50,160,50">
            
        </Picker>
        <Entry x:Name="phNum" Keyboard="Numeric" AbsoluteLayout.LayoutBounds="120,100,160,50" Placeholder="Phonenumber"></Entry>
        <Button Text="Send" AbsoluteLayout.LayoutBounds="120,160,160,50" Clicked="Button_Clicked"></Button>
        <Entry x:Name="own" AbsoluteLayout.LayoutBounds="120,220,160,50" Placeholder="Own Meassage"></Entry>
        <Button x:Name="custom" Text="Send custom message" AbsoluteLayout.LayoutBounds="120,270,160,70" Clicked="custom_Clicked"></Button>
    </AbsoluteLayout>

</ContentPage>
